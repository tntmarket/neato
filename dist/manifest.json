
{
    "manifest_version": 3,
    "name": "Neato",
    "description": "Automates Various tasks in Neopets",
    "version": "0.0.1",
    "action": {
        "default_icon": {
            "16": "icon-16.png",
            "48": "icon-48.png",
            "128": "icon-128.png"
        },
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["https://www.neopets.com/space/gormball*"],
            "js": ["js/gormball.js"]
        },
        {
            "matches": ["https://www.neopets.com/shops/wizard*"],
            "js": ["js/shopWizard.js"]
        },
        {
            "matches": ["https://www.neopets.com/market.phtml?type=your*order_by=price"],
            "js": ["js/myShopStock.js"]
        },
        {
            "matches": ["https://www.neopets.com/objects.phtml?*type=shop*"],
            "js": ["js/npcShop.js"]
        },
        {
            "matches": ["https://www.neopets.com/faerieland/employ/employment.phtml?type=jobs&voucher=basic*"],
            "js": ["js/employmentAgency.js"]
        },
        {
            "matches": ["https://www.neopets.com/browseshop.phtml?*"],
            "js": ["js/userShop.js"]
        }
    ],
    "background": {
        "service_worker": "js/backgroundPage.js"
    },
    "icons": {
        "16": "icon-16.png",
        "48": "icon-48.png",
        "128": "icon-128.png"
    },
    "host_permissions": ["https:\/\/*/*"],
    "permissions": ["tabs", "activeTab", "notifications", "scripting"]
}

